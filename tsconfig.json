{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {},
    "jsx": "react-jsx"
  },
  "include": [
    "app/**/*",
    "lib/**/*",
    "scripts/**/*",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "coverage"
  ]
}
