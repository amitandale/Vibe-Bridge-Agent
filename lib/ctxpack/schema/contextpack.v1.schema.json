{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vibe.local/schema/contextpack.v1.schema.json",
  "title": "ContextPack v1",
  "type": "object",
  "required": [
    "version",
    "meta",
    "sections"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "meta": {
      "type": "object",
      "required": [
        "project",
        "branch",
        "commit",
        "generatedAt"
      ],
      "properties": {
        "project": {
          "type": "string",
          "minLength": 1
        },
        "branch": {
          "type": "string",
          "minLength": 1
        },
        "commit": {
          "type": "string",
          "minLength": 7
        },
        "generatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": true
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "items"
        ],
        "properties": {
          "name": {
            "type": "string",
            "enum": [
              "templates",
              "spec_canvas",
              "diff_slices",
              "linked_tests",
              "contracts",
              "extras"
            ]
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id"
              ],
              "properties": {
                "id": {
                  "type": "string",
                  "minLength": 1
                },
                "path": {
                  "type": "string"
                },
                "content": {
                  "type": "string"
                },
                "meta": {
                  "type": "object"
                },
                "sha256": {
                  "type": "string",
                  "pattern": "^[a-f0-9]{64}$"
                }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}